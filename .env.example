# Flask Secret Key
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here
# Flask Debug Mode (set to true for development, false for production)
FLASK_DEBUG=false

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=respondent_manager

# Grok AI API Configuration (xAI)
# Get your API key from: https://x.ai/api
# The API URL defaults to https://api.x.ai/v1/chat/completions if not specified
GROK_API_KEY=your-grok-api-key-here
GROK_API_URL=https://api.x.ai/v1/chat/completions

# Optional: Cache Configuration
# CACHE_REFRESH_INTERVAL_HOURS=24
# ENABLE_AI_ANALYSIS=true
# AUTO_HIDE_SIMILAR_PROJECTS=true
# MAX_RECOMMENDATIONS=10
