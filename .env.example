# MongoDB Configuration
# Connection string for MongoDB (local or Atlas)
MONGODB_URI=mongodb://localhost:27017/
# Database name
MONGODB_DB=respondent_manager

# Flask Configuration
# Secret key for Flask sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here

# Grok AI Configuration (Optional)
# API key for Grok AI (x.ai) - used for AI-powered project analysis
GROK_API_KEY=your-grok-api-key-here
# Grok API URL (default: https://api.x.ai/v1/chat/completions)
GROK_API_URL=https://api.x.ai/v1/chat/completions

# Email/SMTP Configuration (Required for email verification)
# SMTP server hostname (Mailgun: smtp.mailgun.org)
SMTP_HOST=smtp.mailgun.org
# SMTP port (default: 587 for TLS)
SMTP_PORT=587
# SMTP username (Mailgun: your Mailgun SMTP username)
SMTP_USER=your-smtp-username
# SMTP password (Mailgun: your Mailgun SMTP password)
SMTP_PASSWORD=your-smtp-password
# From email address (must be verified in your Mailgun account)
SMTP_FROM_EMAIL=noreply@yourdomain.com
# Base URL for verification links (use http://localhost:5000 for local dev, https://yourdomain.com for production)
APP_URL=http://localhost:5000
