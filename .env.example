# Respondent Pro Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Required Configuration
# ============================================

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=respondent_manager

# Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here

# ============================================
# Email Configuration (Optional)
# ============================================

# SMTP Settings for sending emails
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Support recipient email address (where support requests from users are sent)
# If not set, defaults to SMTP_FROM_EMAIL
SUPPORT_EMAIL=support@yourdomain.com

# Application URL (used in email links)
APP_URL=http://localhost:5000

# ============================================
# AI/LLM Configuration (Optional)
# ============================================

# Grok API for AI features
GROK_API_KEY=your-grok-api-key
GROK_API_URL=https://api.x.ai/v1/chat/completions

# ============================================
# Admin Configuration
# ============================================

# Admin User IDs (comma-separated list of MongoDB user IDs)
# Users with these IDs will have access to the /admin page
# Example: ADMIN_USER_IDS=507f1f77bcf86cd799439011,507f1f77bcf86cd799439012
ADMIN_USER_IDS=

# ============================================
# Server Configuration (Optional)
# ============================================

# Host to bind to (default: 0.0.0.0)
HOST=0.0.0.0

# Port to listen on (default: 5000)
PORT=5000

# Flask debug mode (set to 'true' for development, 'false' for production)
FLASK_DEBUG=false

# SSL Certificate paths (for HTTPS)
# SSL_CERT=/path/to/cert.pem
# SSL_KEY=/path/to/key.pem
